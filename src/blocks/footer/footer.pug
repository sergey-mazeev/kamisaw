                    .footer__column-title Контакты
                    .footer__column-content
                        .footer__address Большая Семёновская ул., 40, стр. 13, Москва, Россия
                        .footer__mail: a(href="mailto:kamisaw@info.ru" target="_blank") kamisaw@info.ru
                        .footer__phone: a(href="tel:88000000000") 8 (800) 000 00-00
                        .footer__socials.socials
